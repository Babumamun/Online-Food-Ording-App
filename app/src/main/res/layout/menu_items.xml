<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="10dp">


    <ImageView
        android:id="@+id/food_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ee"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/food_img"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="very famouse tv food"
            android:textSize="14sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tv_taste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sphycy and then shodfdf"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:background="@color/taste_bg_color"
            android:textColor="#000000"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="love you"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_gray"
            android:textSize="12sp"
            />



        <TextView
            android:id="@+id/tv_sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100taka"
            android:textColor="@color/price_red"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add_card"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/ic_group_1675" />

</RelativeLayout>