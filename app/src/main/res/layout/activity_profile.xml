<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_item_bg_selector"
    tools:context=".ProfileActivity">
    <include
        layout="@layout/title_bar"/>
    <include
        layout="@layout/navaigation_drawer_head"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:src="@drawable/no_image1">

        </ImageView>

        <TextView
            android:layout_width="291dp"
            android:layout_height="38dp"
            android:layout_marginStart="120dp"
           android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:text="laoshi"
            android:textAllCaps="false"
            android:textColor="@color/account_color"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_heart"
          >

        </ImageView>

        <TextView
            android:layout_width="291dp"
            android:layout_height="38dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:text="Favorite"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:src="@drawable/ic_bx_cart_2">

        </ImageView>

        <TextView
            android:layout_width="291dp"
            android:layout_height="38dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:text="Check Card"
            android:textAllCaps="false"
            android:textColor="@color/blue_color"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_settings_24">

        </ImageView>

        <TextView
            android:layout_width="291dp"
            android:layout_height="38dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:text="Setting"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary2"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>